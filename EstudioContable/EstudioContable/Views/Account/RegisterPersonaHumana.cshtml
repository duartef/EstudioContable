@model EstudioContable.Models.ApplicationDbContext
@{
    ViewBag.Title = "RegisterPersonaHumana";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white" ng-controller="RegisterPersonaHumanaController">
    <h1 style="text-align:center">Registro de Persona Humana</h1>
    <section class="content content-boxed">
        <!-- Section Content -->
        <div class="row items-push push-50-t push-30">
            <div class="col-md-6 col-md-offset-3">
                <form class="form-horizontal" name="registerPHForm" ng-submit="register(registerPHForm)" ng-validate="validationOptions">
                    <div class="form-group">
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="nombre" name="nombre" ng-model="personaHumana.nombre">
                                <label for="nombre">Nombre</label>
                            </div>
                        </div>

                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="apellido" name="apellido" ng-model="personaHumana.apellido">
                                <label for="apellido">Apellido</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="dni" name="dni" ng-model="personaHumana.dni" />
                                <label for="dni">DNI</label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="cuit" name="cuit" ng-model="personaHumana.cuit" />
                                <label for="cuit">CUIT</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="form-material form-material-primary ">
                                <label for="nacionalidad" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400"><em>Nacionalidad</em></label>
                                <select class="form-control" id="nacionalidad" name="nacionalidad" ng-model="personaHumana.nacionalidad">
                                    <option value="Argentina">Argentina</option>
                                    <option value="Brasileña">Brasileña</option>
                                    <option value="Uruguaya">Uruguaya</option>
                                    <option value="Chilena">Chilena</option>
                                    <option value="Paraguaya">Paraguaya</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <label>Fecha de Nacimiento</label>
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="date" id="fechaNacimiento" name="fechaNacimiento" ng-model="personaHumana.fechaNacimiento">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="form-material form-material-primary ">
                                <label for="surname" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400"><em>Estado Civil</em></label>
                                <select class="form-control" id="estadoCivil" name="estadoCivil" ng-model="personaHumana.estadoCivil">
                                    <option value="Soltero">Soltero</option>
                                    <option value="Casado">Casado</option>
                                    <option value="Divorciado">Divorciado</option>
                                    <option value="Viudo">Viudo</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="profesion" name="profesion" ng-model="personaHumana.profesion">
                                <label for="profesion">Profesion</label>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="tel" id="celular" name="celular" ng-model="personaHumana.celular" />
                                <label for="celular">Celular</label>
                            </div>
                        </div>


                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="tel" id="telefonoLaboral" name="telefonoLaboral" ng-model="personaHumana.telefonoLaboral" />
                                <label for="telefonoLaboral">Telefono Laboral</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="email" id="emailLaboral" name="emailLaboral" ng-model="personaHumana.emailLaboral">
                                <label for="emailLaboral">Email Laboral</label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="email" id="emailPersonal" name="emailPersonal" ng-model="personaHumana.emailPersonal">
                                <label for="emailPersonal">Email Personal</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="domicilio" name="domicilio" ng-model="personaHumana.domicilio">
                                <label for="domicilio">Domicio</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="localidad" name="localidad" ng-model="personaHumana.localidad">
                                <label for="localidad">Localidad</label>
                            </div>
                        </div>

                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="provincia" name="provincia" ng-model="personaHumana.provincia">
                                <label for="provincia">Provincia</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="domicilioComercial" name="domicilioComercial" ng-model="personaHumana.domicilioComercial">
                                <label for="domicilioComercial">Domicio Comercial</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="localidadComercial" name="localidadComercial" ng-model="personaHumana.localidadComercial">
                                <label for="localidadComercial">Localidad</label>
                            </div>
                        </div>

                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="provinciaComercial" name="provinciaComercial" ng-model="personaHumana.provinciaComercial">
                                <label for="provinciaComercial">Provincia</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="text" id="nroIngresosBrutos" name="nroIngresosBrutos" ng-model="personaHumana.nroIngresosBrutos">
                                <label for="nroIngresosBrutos">Numero de Ingresos Brutos</label>
                            </div>
                        </div>

                        <div class="col-xs-6">
                            <label>Fecha de Cierre de Ejericio</label>
                            <div class="form-material form-material-primary floating">
                                <input class="form-control" type="date" id="fechaCierreEjercicios" name="fechaCierreEjercicios" ng-model="personaHumana.fechaCierreEjercicios">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="form-material form-material-primary ">
                                <label for="surname" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400"><em>Actividades</em></label>
                                <select class="form-control" name="Actividades">
                                    <option value="SociedadderesponsabilidadLimitada">Actividad1</option>
                                    <option value="SociedadAnonima">Actividad2</option>
                                    <option value="SociedadAnonima">Actividad3</option>
                                    <option value="SociedadAnonima">Actividad4</option>
                                    <option value="SociedadAnonima">Actividad5</option>

                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-12" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400">Es Empleador?</label>
                        <div class="col-xs-6">
                            <div class="radio">
                                <label for="example-radio1">
                                    <input type="radio" id="example-radio1" name="example-radios" value="option1">Si
                                </label>
                            </div>
                            <div class="radio">
                                <label for="example-radio2">
                                    <input type="radio" id="example-radio2" name="example-radios" value="option2">No
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-material form-material-primary ">
                                <label for="surname" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400">Convenio Colectivo de Trabajo</label>
                                <select class="form-control" name="CCT">
                                    <option value="SociedadAnonima">CCT 1</option>
                                    <option value="SociedadAnonima">CCT 2</option>
                                    <option value="SociedadAnonima">CCT 3</option>
                                    <option value="SociedadAnonima">CCT 4</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="form-material">
                                <select data-js-select2 class="form-control" id="example2-select2-multiple" data="actividades" name="example2-select2-multiple" style="width: 100%;" data-placeholder="Choose many.." multiple>
                                    @*<option></option><!-- Required for data-placeholder attribute to work with Select2 plugin -->*@
                                    @*<option ng-repeat="actividad in actividades" value={{actividad.id}}>{{actividad.descripcion}}</option>*@
                                </select>
                                <label for="example2-select2-multiple">Multiple Values</label>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="form-material form-material-primary ">
                                <label for="surname" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400">Frecuencia de Atencion</label>
                                <select class="form-control" id="frecAtencion" name="frecAtencion" ng-model="personaHumana.frecAtencion">
                                    <option value="Mensual">Mensual</option>
                                    <option value="Anual">Anual</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-material form-material-primary ">
                                <label for="surname" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400">Responsable en el Estudio</label>
                                <select class="form-control" id="responsable" name="responsable" ng-model="personaHumana.responsable">
                                    <option value="SociedadAnonima">Responsable 1</option>
                                    <option value="SociedadAnonima">Responsable 2</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="form-material form-material-primary ">
                                <label for="surname" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400">Situacion Impositiva</label>
                                <select class="form-control" id="situacionImpositiva" name="situacionImpositiva" ng-model="personaHumana.situacionImpositiva">
                                    <option value="Monotributista">Monotributista</option>
                                    <option value="RegimenGeneral">Regimen General</option>
                                </select>
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-xs-12" for="example-textarea-input" style="font-family:'Source Sans Pro';font-size:15px; font-weight:400">Observaciones</label>
                        <div class="col-xs-12">
                            <textarea class="form-control" id="observaciones" name="observaciones" rows="6" placeholder="Observaciones" ng-model="personaHumana.observaciones"></textarea>
                        </div>
                    </div>

                    @*<div class="form-group">
                            <div class="col-xs-12 text-center">
                                <label class="css-input switch switch-sm switch-success">
                                    <input type="checkbox" id="frontend-signup-terms" name="frontend-signup-terms"><span></span> I agree with <a data-toggle="modal" data-target="#modal-signup-terms" href="#">terms &amp; conditions</a>
                                </label>
                            </div>
                        </div>*@
                    <div class="alert alert-danger alert-dismissable" ng-show="showErrorMessage">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h3 class="font-w300 push-15">Error</h3>
                        <p>Ha ocurrido un error al intentar registar el usuario. Por favor intente nuevamente o pongase en contacto con el administrador del sistema.</p>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-3">
                            <button class="btn btn-block btn-primary" type="submit" style="background-color:#009881; border-color:#009881"><i class="fa fa-plus pull-right"></i>Registrar</button>
                        </div>
                        <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" style="background-color:#009881; border-color:#009881" >
                            + Agregar Actividades
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Actividades</h5>
                                        <div class="alert alert-info">
                                            <p>Ordenado por: {{ sortType }}</p>
                                            <p>Orden Ascendente: {{ sortReverse }}</p>
                                            <p hidden="hidden">Search Query: {{ filtro }}</p>
                                        </div>

                                        <div class="form-group">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <div class="input-group-addon"><i class="fa fa-search"></i></div>
                                                    <input type="text" class="form-control" placeholder="Buscar.." ng-model="filtro">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <table class="table table-bordered table-striped">

                                                <thead>
                                                    <tr>
                                                        <td>
                                                            <a href="#" ng-click="sortType = 'Id'; sortReverse = !sortReverse">
                                                                Id
                                                                <span ng-show="sortType == 'Id' && !sortReverse" class="fa fa-caret-down"></span>
                                                                <span ng-show="sortType == 'Id' && sortReverse" class="fa fa-caret-up"></span>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="#" ng-click="sortType = 'Descripcion'; sortReverse = !sortReverse">
                                                                Descripción
                                                                <span ng-show="sortType == 'Descripcion' && !sortReverse" class="fa fa-caret-down"></span>
                                                                <span ng-show="sortType == 'Descripcion' && sortReverse" class="fa fa-caret-up"></span>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <tr ng-repeat="actividad in actividades | orderBy:sortType:sortReverse | filter:filtro">
                                                        <td>{{actividad.Id}}</td>
                                                        <td>{{actividad.Descripcion}}</td>
                                                        <td><button class="btn btn-block btn-primary" data-ng-click="addActividad($event)" id="{{actividad.Id}}" style="background-color:#009881; border-color:#009881"><i class="fa fa-plus pull-right"></i></button></td>
                                                    </tr>
                                                </tbody>

                                            </table>
                                        </div>

                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>


                                        @*<div class="modal-body">
                                                ...
                                            </div>*@
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                            <button type="button" class="btn btn-primary" style="background-color:#009881; border-color:#009881">Agregar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-sm-offset-3">
                            <button class="btn btn-block btn-primary" type="button" data-ng-click="addCCT($event)" style="background-color:#009881; border-color:#009881"><i class="fa fa-plus pull-right"></i>Convenios Colectivos de Trabajo</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- END Section Content -->
    </section>

</div>

