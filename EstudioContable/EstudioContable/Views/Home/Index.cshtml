@{
    ViewBag.Title = "Inicio";
}
<div class="bg-white">
    <section class="content content-boxed">
        <div class="container" ng-controller="IndexController">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-4 visibility-hidden" ng-repeat="module in modules track by $index" data-js-appear="{class:'animated zoomIn', timeout:{{module.appearTimeout}}}">
                    <a class="block block-rounded block-link-hover2" href="{{module.link}}">
                        <div class="block-content block-content-full text-center {{module.colorClass}} ribbon ribbon-bookmark ribbon-crystal">
                            <div class="item item-2x item-circle bg-crystal-op push-20-t push-20 animated fadeIn" data-toggle="appear" data-offset="50" data-class="animated fadeIn">
                                <i class="fa {{module.iconClass}} text-white-op"></i>
                            </div>
                            <div class="text-white-op">
                                <em>{{module.name}}</em>
                            </div>
                        </div>
                        <div class="block-content">
                            <h4 class="mheight-125">{{module.description}}</h4>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <div class="bg-primary-dark">
        <section class="content content-full content-boxed">
            <div class="push-20-t push-20 text-center">
                <h3 class="h4 text-white-op push-20 animated fadeIn" data-toggle="appear">Querés formar parte del estudio? Envianos tu CV!</h3>
                <a class="btn btn-info visibility-hidden" data-js-appear="{class:'animated bounceIn'}" href="/Account/Register"><i class="si si-rocket text-white"></i>&nbsp;&nbsp;&nbsp;&nbsp;Enviar CV</a>
            </div>
        </section>
    </div>
</div>